<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventario Equipo</title>
    <%- include('partials/head') %>
</head>

<body>
    <!--- Parcial de codigo para barra de navegacion  -->
    <%- include('partials/navigation') %>

        <body class="bg-light">

            <!-- Header -->
            <div class="bg-white border-bottom py-3 mb-4">
                <div class="container">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 rounded p-2 me-3">
                           <i class="bi bi-buildings text-primary fs-1 "></i>
                        </div>
                        <div>
                            <h1 class="mb-0 h3 fw-bold">Inventario de Componentes FEDE</h1>
                            <p class="text-muted mb-0 small">Sistema de gestión de equipos tecnológicos gubernamentales
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="container">

                <h1 class="h4 mb-4">Buscar en Inventario</h1>


                <!-- Controles -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="row g-3">
                            <!-- Búsqueda -->
                            <div class="col-lg-4">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" class="form-control"
                                        placeholder="Buscar por ID, tipo, procesador, SO...">
                                </div>
                            </div>


                            <!-- Filtro Tipo -->
                            <div class="col-lg-2 col-md-6">
                                <select class="form-select">
                                    <option selected>Tipo de equipo</option>
                                    <option>Computadora</option>
                                    <option>Impresora</option>
                                    <option>Monitor</option>
                                    <option>Teclado</option>
                                    <option>Mouse</option>
                                </select>
                            </div>

                             <!-- Filtro Estado -->
                            <div class="col-lg-2 col-md-6">
                                <select class="form-select">
                                    <option selected>Todos los estados</option>
                                    <option>Activo</option>
                                    <option>En reparación</option>
                                    <option>Inactivo</option>
                                    <option>Dado de baja</option>

                                    Desktop

                                </select>
                            </div>

                            <!-- Botones -->
                            <br>
                            <div class="col-lg-3 d-flex gap-3 ">
                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAgregar">
                                    Agregar equipo
                                </button>

                                <button class="btn btn-outline-primary">
                                    Exportar Informe
                                </button>

                            </div>


                        </div>
                    </div>
                </div>

                <!-- Tabla -->
                <div class="card shadow-sm mb-4">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>ID Activo</th>
                                    <th>Tipo</th>
                                    <th>Procesador</th>
                                    <th>Sistema Operativo</th>
                                    <th>Versión</th>
                                    <th>Resguardatorio</th>
                                    <th>Estado</th>
                                    <th class="text-end">Observaciones</th>
                                </tr>
                            </thead>
                                                        <tbody>
                                                                <!--
                                                                    La variable `equipos` la provee el controlador: 
                                                                    `res.render('index', { equipos, totalEquipos })`
                                                                    Cada elemento `e` corresponde a una fila de la tabla.
                                                                -->
                                                                <% if (typeof equipos !== 'undefined' && equipos.length > 0) { %>
                                                                    <% equipos.forEach(function(e) { %>
                                                                        <tr>
                                                                            <!-- ID de activo -->
                                                                            <td><%= e.assetId %></td>
                                                                            <!-- Tipo de equipo (Desktop, Laptop, etc.) -->
                                                                            <td><%= e.tipo %></td>
                                                                            <!-- Procesador -->
                                                                            <td><%= e.procesador || '-' %></td>
                                                                            <!-- Sistema operativo -->
                                                                            <td><%= e.sistemaOperativo || '-' %></td>
                                                                            <!-- Versión del sistema -->
                                                                            <td><%= e.versionSistema || '-' %></td>
                                                                            <!-- Persona o dependencia resguardatoria -->
                                                                            <td><%= e.resguardatorio || '-' %></td>
                                                                            <!-- Estado (Activo, En reparación, etc.) -->
                                                                            <td><%= e.estado || '-' %></td>
                                                                            <!-- Observaciones/Notas -->
                                                                            <td class="text-end"><%= e.notas || '-' %></td>
                                                                        </tr>
                                                                    <% }); %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="10" class="text-center text-muted py-5">
                                                                            No hay componentes en el inventario
                                                                        </td>
                                                                    </tr>
                                                                <% } %>
                                                        </tbody>
                        </table>
                    </div>
                </div>

                <!-- Contador: mostramos el número de elementos que envió el controlador -->
                <div class="text-muted small mb-4">
                    <!-- `totalEquipos` lo envía el controlador; si no existe, usamos equipos.length -->
                    Mostrando <strong><%= typeof totalEquipos !== 'undefined' ? totalEquipos : (equipos ? equipos.length : 0) %></strong> de <strong><%= equipos ? equipos.length : 0 %></strong> componentes
                </div>

            </div>

            <!-- MODAL Ventana Emergente para añadir un equipo -->
            <div class="modal fade" id="modalAgregar" tabindex="-1" aria-labelledby="modalAgregarLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalAgregarLabel">Agregar Componente</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="agregarForm">
                                <div class="row g-3">

                                    <!-- ID Activo -->
                                    <div class="col-md-6">
                                        <label for="assetId" class="form-label">ID de Activo *</label>
                                        <input type="text" class="form-control" id="assetId" placeholder="GOB-2024-001"
                                            required>
                                    </div>

                                    <!-- Tipo -->
                                    <div class="col-md-6">
                                        <label for="tipo" class="form-label">Tipo de Componente *</label>
                                        <select class="form-select" id="tipo" required>
                                            <option selected disabled>Seleccionar...</option>
                                            <option>Desktop</option>
                                            <option>Laptop</option>
                                            <option>Monitor</option>
                                            <option>CPU</option>
                                            <option>Servidor</option>
                                            <option>Impresora</option>
                                            <option>Otro</option>
                                        </select>
                                    </div>

                                    <!-- Procesador -->
                                    <div class="col-md-6">
                                        <label for="procesador" class="form-label">Procesador *</label>
                                        <input type="text" class="form-control" id="procesador"
                                            placeholder="Intel Core i5-12400" required>
                                    </div>

                                    <!-- RAM -->
                                    <div class="col-md-6">
                                        <label for="ram" class="form-label">RAM</label>
                                        <input type="text" class="form-control" id="ram" placeholder="16GB DDR4">
                                    </div>

                                    <!-- Sistema Operativo -->
                                    <div class="col-md-6">
                                        <label for="so" class="form-label">Sistema Operativo *</label>
                                        <select class="form-select" id="so" required>
                                            <option selected disabled>Seleccionar...</option>
                                            <option>Windows 11</option>
                                            <option>Windows 10</option>
                                            <option>Linux</option>
                                            <option>macOS</option>
                                            
                                        </select>
                                    </div>

                                    <!-- Versión del Sistema -->
                                    <div class="col-md-6">
                                        <label for="version" class="form-label">Versión del Sistema *</label>
                                        <input type="text" class="form-control" id="version" placeholder="22H2"
                                            required>
                                    </div>

                                    <!-- Pantalla -->
                                    <div class="col-md-6">
                                        <label for="pantalla" class="form-label">Pantalla *</label>
                                        <input type="text" class="form-control" id="pantalla" placeholder='24" Full HD'
                                            required>
                                    </div>

                                    <!-- Almacenamiento -->
                                    <div class="col-md-6">
                                        <label for="storage" class="form-label">Almacenamiento</label>
                                        <input type="text" class="form-control" id="storage" placeholder="512GB SSD">
                                    </div>

                                     <!-- Ressguardatorio -->
                                    <div class="col-md-6">
                                        <label for="ressguardatorio" class="form-label">Ressguardatorio</label>
                                        <input type="text" class="form-control" id="ressguardatorio" placeholder="Juan Perez Lopez">
                                    </div>

                                    <!-- Area -->
                                    <div class="col-md-6">
                                        <label for="Area" class="form-label">Area *</label>
                                        <select class="form-select" id="Area" required>
                                            <option selected disabled>Seleccionar...</option>
                                            <option>Administración</option>
                                            <option>Direccion de investigacion y litigacion</option>
                                            <option>Dirección de prevencion del delito</option>
                                            <option>MESA 2</option>
                                            <option>MESA 3</option>
                                            <option>Policia Investigadora</option>
                                            <option>Operaciones</option>
                                            <option>Otro</option>
                                        </select>
                                    </div>

                                    <!-- Estado -->
                                    <div class="col-md-6">
                                        <label for="estado" class="form-label">Estado *</label>
                                        <select class="form-select" id="estado" required>
                                            <option selected disabled>Seleccionar...</option>
                                            <option>Activo</option>
                                            <option>En reparación</option>
                                            <option>Inactivo</option>
                                            <option>Dado de baja</option>
                                        </select>
                                    </div>

                                    <!-- Fecha de Adquisición -->
                                    <div class="col-12">
                                        <label for="fecha" class="form-label">Fecha de Adquisición *</label>
                                        <input type="date" class="form-control" id="fecha" required>
                                    </div>

                                    <!-- Notas -->
                                    <div class="col-12">
                                        <label for="notas" class="form-label">Notas Adicionales</label>
                                        <textarea class="form-control" id="notas" rows="3"
                                            placeholder="Información adicional sobre el componente..."></textarea>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- Botones del MODAL -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="button" id="btnAgregar" class="btn btn-primary">Agregar Componente</button>
                        </div>
                    </div>
                </div>
            </div>
        </body>

                <!-- Script opcional: carga datos vía AJAX desde /api/equipos y rellena la tabla -->
                <script>
                    /*
                        Este script hace una petición GET a /api/equipos y reemplaza
                        el contenido del <tbody> de la tabla por las filas recibidas.
                        Está comentado por defecto (por si ya renderizas desde el servidor).
                        Descomenta la llamada a `loadEquipos()` si quieres que la tabla
                        se actualice dinámicamente en el cliente.
                    */

                    function renderRows(equipos) {
                        const tbody = document.querySelector('.table-responsive table tbody');
                        if (!tbody) return;
                        if (!equipos || equipos.length === 0) {
                            tbody.innerHTML = `\n<tr>\n  <td colspan="10" class="text-center text-muted py-5">No hay componentes en el inventario</td>\n</tr>`;
                            return;
                        }

                        tbody.innerHTML = equipos.map(e => `\
                            <tr>\
                                <td>${e.assetId || e.id || '-'}</td>\
                                <td>${e.tipo || '-'}</td>\
                                <td>${e.procesador || '-'}</td>\
                                <td>${e.sistemaOperativo || e.sistema_operativo || '-'}</td>\
                                <td>${e.versionSistema || e.version_sistema || '-'}</td>\
                                <td>${e.resguardatorio || e.resguardatorio || '-'}</td>\
                                <td>${e.estado || e.estadoEquipo || '-'}</td>\
                                <td class="text-end">${e.notas || '-'}</td>\
                            </tr>`).join('');
                    }

                    async function loadEquipos() {
                        try {
                            const res = await fetch('/api/equipos');
                            if (!res.ok) throw new Error('Error al obtener equipos');
                            const data = await res.json();
                            renderRows(data);
                            // actualizar contador
                            const contador = document.querySelector('.text-muted.small.mb-4');
                            if (contador) contador.innerHTML = `Mostrando <strong>${data.length}</strong> de <strong>${data.length}</strong> componentes`;
                        } catch (err) {
                            console.error(err);
                        }
                    }

                    // Para activar la carga dinámica, descomenta la siguiente línea:
                    // loadEquipos();
                </script>

                <%- include('partials/footer') %>

                <script>
                    // Manejador para enviar nuevo equipo desde el modal
                    async function submitNuevoEquipo() {
                        const btn = document.getElementById('btnAgregar');
                        if (!btn) return;
                        btn.disabled = true;
                        try {
                            const form = document.getElementById('agregarForm');
                            const get = id => (form.querySelector('#' + id) ? form.querySelector('#' + id).value : undefined);

                            const equipoData = {
                                assetId: get('assetId'),
                                tipo: get('tipo'),
                                procesador: get('procesador'),
                                ram: get('ram'),
                                sistemaOperativo: get('so') || get('sistemaOperativo'),
                                versionSistema: get('version') || get('versionSistema'),
                                pantalla: get('pantalla'),
                                almacenamiento: get('storage') || get('almacenamiento'),
                                resguardatorio: get('ressguardatorio') || get('resguardatorio'),
                                area: get('Area') || get('area'),
                                estado: get('estado'),
                                fechaAdquisicion: get('fecha'),
                                notas: get('notas'),
                                marca: get('marca') || null,
                                modelo: get('modelo') || null,
                                numSerie: get('numSerie') || null
                            };

                            const res = await fetch('/api/crear', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify(equipoData)
                            });

                            const json = await res.json();
                            if (!res.ok || !json.success) {
                                console.error('Error creando equipo:', json);
                                alert(json.message || 'Error al crear equipo');
                                return;
                            }

                            // Cerrar modal (simular click en el botón de cerrar)
                            const closeBtn = document.querySelector('#modalAgregar .btn-close');
                            if (closeBtn) closeBtn.click();

                            // Actualizar tabla si la función existe
                            if (typeof loadEquipos === 'function') loadEquipos();

                            // Mostrar confirmación rápida
                            alert(json.message || 'Equipo agregado');
                        } catch (err) {
                            console.error(err);
                            alert('Error al agregar equipo');
                        } finally {
                            btn.disabled = false;
                        }
                    }

                    // Vincular evento al botón
                    document.addEventListener('DOMContentLoaded', function () {
                        const btn = document.getElementById('btnAgregar');
                        if (btn) btn.addEventListener('click', submitNuevoEquipo);
                    });
                </script>

</html>